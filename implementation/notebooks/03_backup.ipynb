   "id": "classification-imports",
   "metadata": {},
   "outputs": [],
   "source": [
    "import pandas as pd\n",
    "import numpy as np\n",
    "import json\n",
    "from sklearn.ensemble import RandomForestClassifier\n",
    "from sklearn.linear_model import LogisticRegression\n",
    "from sklearn.metrics import classification_report, accuracy_score, confusion_matrix\n",
    "from sklearn.preprocessing import LabelEncoder\n",
    "from sentence_transformers import SentenceTransformer\n",
    "import joblib\n",
    "import os\n",
    "import warnings\n",
    "warnings.filterwarnings('ignore')"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "load-data",
   "metadata": {},
   "outputs": [],
   "source": [
    "train_df = pd.read_csv('../data/processed/train_data.csv')\n",
    "val_df = pd.read_csv('../data/processed/val_data.csv')\n",
    "test_df = pd.read_csv('../data/processed/test_data.csv')\n",
    "\n",
    "embedder = SentenceTransformer('all-MiniLM-L6-v2')\n",
    "\n",
    "train_embeddings = embedder.encode(train_df['text'].tolist())\n",
    "val_embeddings = embedder.encode(val_df['text'].tolist())\n",
    "test_embeddings = embedder.encode(test_df['text'].tolist())"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "classification-models",
   "metadata": {},
   "outputs": [],
   "source": [
    "class TicketClassifier:\n",
    "    def __init__(self):\n",
    "        self.category_encoder = LabelEncoder()\n",
    "        self.priority_encoder = LabelEncoder()\n",
    "        self.category_model = RandomForestClassifier(n_estimators=100, random_state=42)\n",
    "        self.priority_model = LogisticRegression(random_state=42, max_iter=1000)\n",
    "        self.embedder = SentenceTransformer('all-MiniLM-L6-v2')\n",
    "        \n",
    "    def fit(self, embeddings, categories, priorities):\n",
    "        y_cat = self.category_encoder.fit_transform(categories)\n",
    "        y_pri = self.priority_encoder.fit_transform(priorities)\n",
    "        \n",
    "        self.category_model.fit(embeddings, y_cat)\n",
    "        self.priority_model.fit(embeddings, y_pri)\n",
    "    \n",
    "    def predict(self, embeddings):\n",
    "        cat_pred = self.category_model.predict(embeddings)\n",
    "        pri_pred = self.priority_model.predict(embeddings)\n",
    "        \n",
    "        categories = self.category_encoder.inverse_transform(cat_pred)\n",
    "        priorities = self.priority_encoder.inverse_transform(pri_pred)\n",
    "        \n",
    "        cat_proba = self.category_model.predict_proba(embeddings)\n",
    "        pri_proba = self.priority_model.predict_proba(embeddings)\n",
    "        \n",
    "        return categories, priorities, cat_proba, pri_proba\n",
    "    \n",
    "    def evaluate(self, embeddings, true_categories, true_priorities):\n",
    "        pred_categories, pred_priorities, _, _ = self.predict(embeddings)\n",
    "        \n",
    "        cat_accuracy = accuracy_score(true_categories, pred_categories)\n",
    "        pri_accuracy = accuracy_score(true_priorities, pred_priorities)\n",
    "        \n",
    "        cat_report = classification_report(true_categories, pred_categories, output_dict=True)\n",
    "        pri_report = classification_report(true_priorities, pred_priorities, output_dict=True)\n",
    "        \n",
    "        return {\n",
    "            'category_accuracy': cat_accuracy,\n",
    "            'priority_accuracy': pri_accuracy,\n",
    "            'category_report': cat_report,\n",
    "            'priority_report': pri_report\n",
    "        }\n",
    "    \n",
    "    def save_model(self, path):\n",
    "        model_data = {\n",
    "            'category_model': self.category_model,\n",
    "            'priority_model': self.priority_model,\n",
    "            'category_encoder': self.category_encoder,\n",
    "            'priority_encoder': self.priority_encoder\n",
    "        }\n",
    "        joblib.dump(model_data, path)\n",
    "    \n",
    "    def load_model(self, path):\n",
    "        model_data = joblib.load(path)\n",
    "        self.category_model = model_data['category_model']\n",
    "        self.priority_model = model_data['priority_model']\n",
    "        self.category_encoder = model_data['category_encoder']\n",
    "        self.priority_encoder = model_data['priority_encoder']\n",
    "\n",
    "classifier = TicketClassifier()\n",
    "classifier.fit(train_embeddings, train_df['category'], train_df['priority'])"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "model-evaluation",
   "metadata": {},
   "outputs": [],
   "source": [
    "val_metrics = classifier.evaluate(val_embeddings, val_df['category'], val_df['priority'])\n",
    "test_metrics = classifier.evaluate(test_embeddings, test_df['category'], test_df['priority'])\n",
    "\n",
    "pred_categories, pred_priorities, cat_probas, pri_probas = classifier.predict(test_embeddings)\n",
    "\n",
    "results_df = test_df.copy()\n",
    "results_df['predicted_category'] = pred_categories\n",
    "results_df['predicted_priority'] = pred_priorities\n",
    "results_df['category_confidence'] = np.max(cat_probas, axis=1)\n",
    "results_df['priority_confidence'] = np.max(pri_probas, axis=1)\n",
    "\n",
    "evaluation_results = {\n",
    "    'validation_metrics': val_metrics,\n",
    "    'test_metrics': test_metrics,\n",
    "    'model_performance': {\n",
    "        'category_classes': classifier.category_encoder.classes_.tolist(),\n",
    "        'priority_classes': classifier.priority_encoder.classes_.tolist()\n",
    "    }\n",
    "}\n",
    "\n",
    "if not os.path.exists('../outputs'):\n",
    "    os.makedirs('../outputs')\n",
    "\n",
    "classifier.save_model('../models/ticket_classifier.joblib')\n",
    "results_df.to_csv('../outputs/classification_results.csv', index=False)\n",
    "\n",
    "with open('../outputs/classification_metrics.json', 'w') as f:\n",
    "    json.dump(evaluation_results, f, indent=2)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "tag-generation",
   "metadata": {},
   "outputs": [],
   "source": [
    "class TagGenerator:\n",
    "    def __init__(self):\n",
    "        self.category_tags = {\n",
    "            'billing': ['payment', 'invoice', 'charges', 'subscription', 'refund'],\n",
    "            'technical': ['bug', 'error', 'crash', 'performance', 'login'],\n",
    "            'general_inquiry': ['question', 'information', 'help', 'guidance'],\n",
    "            'complaint': ['issue', 'problem', 'dissatisfied', 'frustrated'],\n",
    "            'compliment': ['praise', 'satisfied', 'excellent', 'great'],\n",
    "            'account': ['profile', 'settings', 'access', 'update']\n",
    "        }\n",
    "        \n",
    "        self.priority_tags = {\n",
    "            'high': ['urgent', 'critical', 'immediate'],\n",
    "            'medium': ['important', 'moderate'],\n",
    "            'low': ['minor', 'routine']\n",
    "        }\n",
    "    \n",
    "    def generate_tags(self, text, category, priority):\n",
    "        tags = []\n",
    "        text_lower = text.lower()\n",
    "        \n",
    "        category_tag_pool = self.category_tags.get(category, ['general'])\n",
    "        priority_tag_pool = self.priority_tags.get(priority, ['standard'])\n",
    "        \n",
    "        for tag in category_tag_pool:\n",
    "            if tag in text_lower or any(word in text_lower for word in tag.split()):\n",
    "                tags.append(tag)\n",
    "                if len(tags) >= 2:\n",
    "                    break\n",
    "        \n",
    "        if len(tags) < 2:\n",
    "            tags.extend(category_tag_pool[:2-len(tags)])\n",
    "        \n",
    "        tags.append(priority_tag_pool[0])\n",
    "        tags.append(category)\n",
    "        \n",
    "        return list(set(tags))[:4]\n",
    "\n",
    "tag_generator = TagGenerator()\n",
    "\n",
    "results_df['generated_tags'] = [\n",
    "    tag_generator.generate_tags(text, cat, pri) \n",
    "    for text, cat, pri in zip(results_df['text'], results_df['predicted_category'], results_df['predicted_priority'])\n",
    "]\n",
    "\n",
    "results_df.to_csv('../outputs/classification_with_tags.csv', index=False)"
   ]
  }
